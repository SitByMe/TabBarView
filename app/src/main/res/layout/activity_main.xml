<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:onClick="startToUseTabBarViewActivity"
        android:text="TabBarView控件"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:onClick="startToHomeWithTabActivity"
        android:text="带ViewPager和Tab的首页"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:onClick="startToOrderListWithTabActivity"
        android:text="带ViewPager和Tab的订单列表页面"
        android:textAllCaps="false" />
</LinearLayout>
